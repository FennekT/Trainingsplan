<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Trainingsplan" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <item name="android:colorBackground">@color/primaryDarkColor</item>
        <item name="android:editTextColor">@color/primaryTextColor</item>
        <item name="android:textColorHint">@color/hintTextColor</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Trainingsplan.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Trainingsplan.Toolbar">
        <item name="popupTheme">@style/Theme.MaterialComponents.DayNight.DarkActionBar</item>
        <item name="android:background">@color/darkGreyColor</item>
        <item name="android:theme">@style/Theme.Trainingsplan.Toolbar.Title</item>
    </style>

    <style name="Theme.Trainingsplan.Toolbar.Title">
        <!-- Color used for the title of the Toolbar - as long as not overridden -->
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <!-- Used to color back button and three dots -->
        <item name="android:textColorSecondary">@color/primaryTextColor</item>
    </style>

    <style name="Theme.Trainingsplan.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/darkGreyColor</item>
    </style>
</resources>